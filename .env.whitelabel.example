# White-Label Configuration Example
# Copy this to .env.local and customize for your organization

# ===================================
# BRANDING CONFIGURATION
# ===================================
APP_NAME="SecureTransfer Pro"
COMPANY_NAME="Lumenit Technologies"
COMPANY_URL="https://lumenit.ca"
SUPPORT_EMAIL="support@lumenit.ca"
LOGO_URL="/assets/lumenit-logo.svg"
FAVICON_URL="/assets/lumenit-favicon.ico"
PRIMARY_COLOR="oklch(0.59 0.18 240)"  # Professional blue
TERMS_URL="https://lumenit.ca/terms"
PRIVACY_URL="https://lumenit.ca/privacy"

# ===================================
# MSP SECURITY FEATURES
# ===================================
MSP_MODE=true
REQUIRE_PASSWORD_PROTECTION=true
MANDATORY_VIRUS_SCAN=true
DISABLE_PUBLIC_REGISTRATION=true
MAX_FILE_SIZE_MB=500
ALLOWED_FILE_EXTENSIONS=".pdf,.docx,.xlsx,.txt,.zip,.jpg,.png"
BLOCKED_FILE_EXTENSIONS=".exe,.bat,.cmd,.scr,.vbs,.js"
MIN_PASSWORD_LENGTH=14
REQUIRE_2FA=true
SESSION_TIMEOUT_MINUTES=30

# ===================================
# UI CUSTOMIZATION
# ===================================
HIDE_BRANDING=false
SHOW_POWERED_BY=false
DEFAULT_THEME="light"
DEFAULT_LANGUAGE="en"

# Custom CSS for additional styling
CUSTOM_CSS="
.header { 
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); 
}
.btn-primary {
  font-weight: 600;
}
"

# ===================================
# EXISTING PALMR CONFIGURATION
# ===================================
# S3 Storage Configuration
ENABLE_S3=true
S3_ENDPOINT=s3.amazonaws.com
S3_REGION=us-east-1
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_BUCKET_NAME=lumenit-secure-files
S3_USE_SSL=true
S3_FORCE_PATH_STYLE=false

# Security
ENCRYPTION_KEY=your-strong-encryption-key-here
SECURE_SITE=true

# Database
DATABASE_URL=file:/app/server/prisma/lumenit.db

# Performance
DOWNLOAD_MAX_CONCURRENT=5
DOWNLOAD_MEMORY_THRESHOLD_MB=512
DOWNLOAD_QUEUE_SIZE=20
DOWNLOAD_AUTO_SCALE=true